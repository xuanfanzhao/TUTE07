 3.times do
  live_loop :pinao do
    use_synth :fm
    play :c2, attack: 0, release: 1
    sleep 0.25
    play :c2, attack: 0, release: 0.5
    sleep 2
    play :e2
    sleep 1
    play :f2
    sleep 1
  end
end

