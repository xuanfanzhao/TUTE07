use_bpm 125
use_synth :saw
3.times do
  live_loop :melody do
    if one_in(3)
      use_transpose 2
    else
      use_transpose 2
    end
    play_pattern_timed [69,72,69,72,64,67,69,69,71], [0.5, 0.5, 0.5, 1, 0.25, 0.5, 0.5,1].ring.tick, attack: 0.1, release: 0.25
    play_pattern_timed [69,72,69,72,64,67,69,69], [0.5, 0.5, 0.5, 1, 0.25, 0.5, 0.5].ring.tick, attack: 0.2, release: 0.25
    play_pattern_timed [69,69,69,69,69,-1],[0.5,0.5,0.5,0.5,1,1].ring.tick,attack: 0.5,release: 0.5
  end
end

